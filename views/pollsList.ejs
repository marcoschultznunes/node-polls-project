<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Polls</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>
<body>
    <%- include('includes/navbar.ejs') %>
    <main>
        <% if (!locals.polls || locals.polls.length === 0) { %>
            <h1>No polls found</h1>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Title</td>
                        <td>Start</td>
                        <td>Deadline</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    <% for (let p of polls) { %> 
                        <tr>
                            <td><p><%= p.id %></p></td>
                            <td>
                                <a href="/polls/view/<%=p.id%>">
                                    <h3><%= p.title %></h3>
                                </a>
                            </td>
                            <td><p><%= p.started %></p></td>
                            <td><p><%= p.finished %></p></td>
                            <td><a href="/polls/edit/<%=p.id%>">Edit</a></td>
                            <td><a href="/polls/delete/<%=p.id%>">Del</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } %>
    </main>
</body>
</html>
